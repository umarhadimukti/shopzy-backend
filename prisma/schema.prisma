generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  created_at DateTime? @default(now())
  updated_at DateTime?

  products Product[]

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String?
  price Decimal @db.Decimal()
  userId Int

  user User @relation(fields: [userId], references: [id])

  @@map("products")
}